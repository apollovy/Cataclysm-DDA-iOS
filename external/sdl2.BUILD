licenses(["notice"])  # zlib, portions BSD, MIT, PostgreSQL

# Common include paths
sdl_includes = [
    "include",
    "src/video/khronos",
]

objc_library(
    name = "sdl2_objc",
    srcs = glob([
        "src/**/*.h",
        "include/*.h",
        "src/video/uikit/*.m",
        "src/joystick/iphoneos/*.m",
        "src/sensor/coremotion/*.m",
        "src/power/uikit/*.m",
    ]),
    includes = sdl_includes,
    non_arc_srcs = glob([
        "src/audio/coreaudio/*.m",
        "src/file/cocoa/*.m",
        "src/filesystem/cocoa/*.m",
        "src/render/metal/*.m",
    ]),
    sdk_frameworks = [
        "AudioToolbox",
        "AVFoundation",
        #"Carbon",
        "CoreAudio",
        "CoreVideo",
        "CoreGraphics",
        "CoreHaptics",
        "CoreMotion",
        "UIKit",
        "GameController",
        "QuartzCore",
        #"Cocoa",
        #"ForceFeedback",
        "IOKit",
        "OpenGLES",
        "Metal",
    ],
    alwayslink = 1,
)

sdl_srcs = glob(
    include = [
        "src/**/*.c",
        "src/**/*.h",
    ],
    exclude = [
        "src/video/qnx/**",
        "src/video/os2/**",
        "src/haptic/windows/**",
        "src/core/windows/**",
        "src/locale/windows/**",
        "src/locale/winrt/**",
        "**/android/**",
        "**/riscos/**",
        "**/windows/**",
        "src/hidapi/**",
        "src/locale/emscripten/**",
        "src/locale/haiku/**",
        "src/core/os2/**",
        "src/test/*.c",
        "src/thread/generic/*.c",
        "src/core/linux/*.c",
        "src/main/**",
    ],
) + glob(
    include = [
        "src/hidapi/ios/*.c",
        "src/hidapi/ios/*.h",
    ],
)

# In general, we bundle SDL2.  However, on Linux that would require a header
# generated by --configure, and a lot of buildflags and installing dev headers
# is in general less painful, so we just link it dynamically.
cc_library(
    name = "sdl2_inner",
    srcs = sdl_srcs,
    hdrs = glob(["include/*.h"]),
    includes = sdl_includes,
    textual_hdrs = glob(["src/thread/generic/*.c"]),
    deps = [":sdl2_objc"],
)

cc_library(
    name = "sdl2",
    hdrs = glob(["include/*.h"]),
    include_prefix = "SDL",
    includes = ["."],
    strip_include_prefix = "include",
    visibility = ["//visibility:public"],
    deps = ["sdl2_inner"],
)
